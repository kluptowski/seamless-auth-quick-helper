        <fields>
            <name>displayinstruction2</name>
            <fieldText>&lt;p&gt;This flow will assign the Elevate permission set to internal users and set a FederatedID value on their user object to match their slack email.&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>intructionspage1</name>
            <fieldText>&lt;p&gt;Enter the slack org # for seamless auth mapping. (Ex. if your org is slack-demo-7000 then you would enter 7000)&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>Slack_Org_Number</name>
            <dataType>String</dataType>
            <fieldText>Slack Org #</fieldText>
            <fieldType>InputField</fieldType>
            <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
            <isRequired>true</isRequired>
            <validationRule>
                <errorMessage>&lt;p&gt;It should be at least 4 digits. &lt;/p&gt;</errorMessage>
                <formulaExpression>len({!Slack_Org_Number})&gt;=4</formulaExpression>
            </validationRule>
        </fields>
        <fields>
            <name>Do_you_want_to_map_this_user</name>
            <choiceReferences>Yes</choiceReferences>
            <choiceReferences>No</choiceReferences>
            <dataType>String</dataType>
            <fieldText>Do you want to map _this_ user automatically?</fieldText>
            <fieldType>RadioButtons</fieldType>
            <helpText>&lt;p&gt;Selecting No will leave this user&apos;s federation ID unchanged in saleforce. Selecting YES will let you enter in an email for the matching slack user to pair yourself to, Jennifer Hynes for example.&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;</helpText>
            <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
            <isRequired>true</isRequired>
        </fields>
        <fields>
            <name>Matching_Slack_User_Email_for_This_Salesforce_User</name>
            <dataType>String</dataType>
            <defaultValue>
                <elementReference>fRunningUserSuggestion</elementReference>
            </defaultValue>
            <fieldText>Matching Slack User Email for This Salesforce User</fieldText>
            <fieldType>InputField</fieldType>
            <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
            <isRequired>true</isRequired>
            <visibilityRule>
                <conditionLogic>and</conditionLogic>
                <conditions>
                    <leftValueReference>Do_you_want_to_map_this_user</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <elementReference>Yes</elementReference>
                    </rightValue>
                </conditions>
            </visibilityRule>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
