    <decisions>
        <description>dupe check</description>
        <name>Already_has_perm_set</name>
        <label>Already has perm set?</label>
        <locationX>660</locationX>
        <locationY>1298</locationY>
        <defaultConnector>
            <targetReference>Assignment_for_permset_assignments</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Try to assign</defaultConnectorLabel>
        <rules>
            <name>Already_Assigned</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Check_if_Permset_already_assigned.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>loop_thru_users.Profile.UserLicense.Name</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Salesforce</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>loop_thru_users</targetReference>
            </connector>
            <label>Dont try to assign</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Edge_Cases</name>
        <label>Check Edge Cases</label>
        <locationX>660</locationX>
        <locationY>782</locationY>
        <defaultConnector>
            <targetReference>Fed_ID_to_Users_for_Update</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default</defaultConnectorLabel>
        <rules>
            <name>Is_Elliot</name>
