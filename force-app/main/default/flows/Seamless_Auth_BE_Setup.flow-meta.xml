    <description>FedID and PermSet assignment to power back end of seamless auth</description>
    <environments>Default</environments>
    <formulas>
        <description>Fixes the typo between slack and sf where slack elliott has 2 t&apos;s and salesforce has 1</description>
        <name>fElliottTypoEmail</name>
        <dataType>String</dataType>
        <expression>&quot;demoeng+elliott_executive_&quot;&amp;{!Slack_Org_Number}&amp;&quot;@slack-corp.com&quot;</expression>
    </formulas>
    <formulas>
        <name>fEmailSyntax</name>
        <dataType>String</dataType>
        <expression>&quot;demoeng+&quot;&amp;lower({!loop_thru_users.FirstName})&amp;&quot;_&quot;&amp;lower({!loop_thru_users.LastName})&amp;&quot;_&quot;&amp;{!Slack_Org_Number}&amp;&quot;@slack-corp.com&quot;</expression>
    </formulas>
    <formulas>
        <name>fRunningUserSuggestion</name>
        <dataType>String</dataType>
        <expression>&quot;demoeng+jennifer_hynes_&quot;&amp;{!Slack_Org_Number}&amp;&quot;@slack-corp.com&quot;</expression>
    </formulas>
    <formulas>
        <name>fUser15Digit</name>
        <dataType>String</dataType>
        <expression>left({!loop_thru_users.Id},15)</expression>
    </formulas>
