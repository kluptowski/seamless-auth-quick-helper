            <conditions>
                <leftValueReference>loop_thru_users.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Elliot Executive</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Emaill</targetReference>
            </connector>
            <label>Is Elliot</label>
        </rules>
        <rules>
            <name>Your_Mapped_User</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Do_you_want_to_map_this_user</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Yes</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>fUser15Digit</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$User.Id</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Your_Email</targetReference>
            </connector>
            <label>Your Mapped User</label>
        </rules>
        <rules>
            <name>All_Others</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>fUser15Digit</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$User.Id</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_All_Email</targetReference>
            </connector>
            <label>All Others</label>
        </rules>
    </decisions>
